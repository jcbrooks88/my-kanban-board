{
  "compilerOptions": {
    "rootDir": "src",  // Specifies the root folder within your source files.
    "outDir": "dist",  // Specifies an output folder for all emitted files.
    "module": "NodeNext",  // Enables ES module system (required for Node.js).
    "moduleResolution": "NodeNext",  // Ensures proper resolution of modules.
    "target": "ES6",  // Specifies that the output should be ES6 JavaScript.
    "esModuleInterop": true,  // Ensures compatibility with non-ES module code.
    "strict": true  // Enables strict type-checking options.
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}


