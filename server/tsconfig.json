{
  "extends": "../tsconfig.json",  // Assuming this extends from a base tsconfig.json
  "compilerOptions": {
    /* Modules */
    "rootDir": "./src",  // Specifies the root folder for your source code.

    /* Emit */
    "outDir": "./dist",  // Directory to output compiled files (e.g., JavaScript).
    "noEmitOnError": true,  // Prevent emitting files if there are TypeScript errors.

    /* Node-specific configurations */
    "esModuleInterop": true,  // Enable ES module interoperability.
    "skipLibCheck": true,  // Skip type checking of declaration files (improves performance).
    "forceConsistentCasingInFileNames": true  // Ensure consistent file name casing across the project.
  },
  "include": [
    "src"  // Specify the directory containing your TypeScript files.
  ],
  "typeRoots": [
    "./node_modules/@types",  // Default type definitions
    "./src/types"  // Custom type definitions (if any).
  ]
}

